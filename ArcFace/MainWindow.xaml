<Window x:Class="ArcFaceClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArcFaceClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <Grid>
        <TextBlock Text="{Binding Hello}" Width="100" Height="100"></TextBlock>
        <Button Width="200" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding BtnClick}">Click</Button>
    </Grid>
</Window>
